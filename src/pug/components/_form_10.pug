.form_area.patern
    for form in formBlock
        .title.title_size-medium.text-center=form.titleForm
        hr.hr.hr-mini.hr-gold(noshade)
        form.form.form_10(action="#", data-abide, novalidate)
            #firstStep.step
                .row
                    for group in form.formGroups
                        .columns.small-12.medium-6.large-3
                            .title.title_size-small.title-semibold.title_color-dark=group.titleGroup
                            .form_group
                                for item in group.formRadio
                                    .form_item.form_item-radiobox.flex
                                        input(type="radio", checked, name=item.nameRadio, id=item.idRadio, required, data-text=item.textRadio)
                                        span
                                        label(for=item.idRadio)=item.textRadio
                                            
                    .columns.small-12.medium-6.large-3
                        .form_item
                            a.btn.btn_border.btn_color-yellow.btn_size-medium(id='goSecondStep')
                                span=form.btnGroup
            #secondStep.step
                .row
                    .columns.small-12.medium-6
                        for item in form.formItems
                            .form_item
                                input(type="text", name=item.nameInpt, placeholder=item.inpt, required)
                                span.form-error 
                                    i.i-error
                    .columns.small-12.medium-6
                        .form_item
                            textarea(name="requisites", placeholder="Банковские реквизиты", required)
                            span.form-error 
                                    i.i-error
                        .form_item
                                input(type="text", name="", placeholder="Какое-то поле*", required)
                                span.form-error 
                                    i.i-error
                        .form_item
                                input(type="text", name="", placeholder="Ещё поле", required)
                                span.form-error 
                                    i.i-error
                .row.align-middle
                    .columns.small-12.medium-6.large-3
                        include ./_back.pug
                        
                    .columns.small-12.medium-6.large-3.large-offset-6
                        .form_item
                            button.btn.btn_border.btn_color-yellow.btn_size-medium(id='goThirdStep')
                                span=form.btnForm
            #thirdStep.step
                .row
                    .columns.small-12.form_10-text
                        p Проверьте правильность заполнения данных. В случае неверно заполненных полей вернитесь назад.
                    #formResult1.columns.small-12
                    #formResult2.columns.small-12
                    .columns.small-12
                        .form_item.mb-2
                            .row.align-middle
                                .columns.small-12.medium-12.large-3
                                    .title.title_size-small.title-semibold.title_color-dark.mb-0 Способ оплаты:
                                .columns.small-12.medium-12.large-9
                                    .form_group.flex.mb-0
                                        .form_item.form_item-radiobox.flex.align-middle.mb-0
                                            input(type="radio", name='payment', id="webpay", required, checked)
                                            span
                                            label(for="webpay")
                                                img(src="./templates/_ares/img/png/webpay.png", alt="webpay")
                                        .form_item.form_item-radiobox.flex.align-middle.align-middle.mb-0
                                            input(type="radio", name='payment', id="erip", required)
                                            span
                                            label(for="erip")
                                                img(src="./templates/_ares/img/png/erip.png", alt="erip")
                        .form_item
                            .row
                                .column.small-12
                                    .form_group.flex.mb-0
                                        .form_item.form_item-checkbox.flex.align-middle
                                            input(type="checkbox", name='payment', id="webpay", required)
                                            span
                                            label(for="webpay") Пожтверрждаю заполнение личных данных

                .row.align-middle
                    .columns.small-12.medium-6.large-3
                        include ./_back.pug
                    .columns.small-12.medium-6.large-3.large-offset-6
                        .form_item
                            button.btn.btn_border.btn_color-yellow.btn_size-medium(type="submit")
                                span=form.btn
            