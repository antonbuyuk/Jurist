extends templates/_layout

block vars
	- var page = "guidline";
	- var title = "guidline";

block content
	.row
		.columns.small-12
			a.btn.btn_border.btn_color-yellow.btn_size-medium 
				span Перейти к публикациям
			a.btn.btn_border.btn_color-yellow.btn_size-medium.disabled 
				span Перейти к публикациям

	.row
		.columns.small-12
			.form_item.form_item-checkbox
				input(type="checkbox", name="")
				span
			.form_item.form_item-checkbox
				input(type="checkbox", name="", disabled, checked)
				span

	.row
		.columns.small-12
			.form_item.form_item-radiobox
				input(type="radio", name="")
				span
			.form_item.form_item-radiobox
				input(type="radio", name="", disabled, checked)
				span

	.row
		.columns.small-12
			form.form(action="#", data-abide, novalidate)
				.form_item.form_item-search
					input(type="search", name="", placeholder="Поиск по статьям", required)
					span.form-error 
						i.i-error
					button(type='submit')
						i.i-search
				.form_item
					input(type="text", name="", placeholder="Фамилия*", required)
					span.form-error 
						i.i-error
				.form_item
					input(type="text", name="", placeholder="Фамилия*", required, disabled)
					span.form-error 
						i.i-error
				.form_item.form_item-upload
					i.i-attachment
					input(type="file", name="uploadfile", )
					div Прикрепить резюме
				.form_item
					button.btn.btn_border.btn_color-yellow.btn_size-medium(type="submit")
						span Перейти к публикациям

	.row
		.columns.small-12
			h1 Showers across the W			36px
			h2 Showers across the W						24px
			h3 Showers across the W							20px
			h4 Showers across the W							18px
			h5 Showers across the W							16.5px
			p Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec ullamcorper nulla non metus auctor fringilla. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit.

	.row
		.columns.small-12
			.social
				mixin social(html,img)
					a.social_item(href=html,target='_blank')
						i(class=img)
				+social('https://facebook.com', 'i-facebook')
				+social('https://vk.com', 'i-vk')
				+social('https://twitter.com', 'i-twitter')

	.row
		.columns.small-12.medium-6.large-5
			.form_area
				.title.title_size-medium.text-center Бесплатная консультация
				hr.hr.hr-mini.hr-gold(noshade)
				form.form(action="#", data-abide, novalidate)
				.form_item.form_item-search
					input(type="search", name="", placeholder="Поиск по статьям", required)
					span.form-error 
						i.i-error
					button(type='submit')
						i.i-search
				.form_item
					input(type="text", name="", placeholder="Фамилия*", required)
					span.form-error 
						i.i-error
				.form_item
					input(type="text", name="", placeholder="Фамилия*", required, disabled)
					span.form-error 
						i.i-error
				.form_item
					textarea(name="", placeholder="Сообщение")
				.form_item.form_item-upload
					i.i-attachment
					input(type="file", name="uploadfile", )
					div Прикрепить резюме
				.form_item
					button.btn.btn_border.btn_color-yellow.btn_size-medium(type="submit")
						span Перейти к публикациям

	.row
		.columns.small-12
			nav(aria-label="Pagination")
				ul.pagination
					mixin paginationItem(href,text)
						li
							a(href=href)=text
					li.current
						span 1
					+paginationItem('#',2)
					+paginationItem('#',3)
					+paginationItem('#',4)
					+paginationItem('#',5)
					li.ellipsis(aria-hidden="true")
					+paginationItem('#',10)

	.row
		.columns.small-12
			nav(aria-label="Вы тут:",role="navigation")
				ul.breadcrumbs
					mixin breadcrumbsItem(href,text)
						li
							a(href=href)=text
					+breadcrumbsItem('#','Главная')
					+breadcrumbsItem('#','О нас')
					li
						span Вакансии