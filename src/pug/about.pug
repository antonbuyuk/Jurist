extends templates/_layout

block vars
    - var page = "about_page";
    - var title = "О нас";

block content
    section.main
        .main_item.background_image.background-cover.background-50(style='background-image: url(./templates/_ares/img/jpg/about.jpg)')
        .main_block
            .row
                .column.small-12.large-10.large-offset-1
                    .title.title_main.title_size-section.title_color-white.text-center
                        | О нас
                    hr.hr.hr-gold.hr-large(noshade)
    div.wrapper.wrapper_menu
        - var wrapperTabs = ['О нас', 'Карьера', 'Социальная ответственность', 'Отзывы'];
        include ./components/_tabs
        section.about.main_about.section
            .row
                .columns.small-12.medium-5.large-4
                    .flex.flex-column.align-center
                        .image-border
                            img(src="../templates/_ares/img/jpg/belyasov.jpg", alt="")
                        .sign
                            | Белявский Сергей Чеславович
                        .sign-post 
                            | Руководитель компании
                .columns.small-12.medium-7.large-8
                    div.egg-list
