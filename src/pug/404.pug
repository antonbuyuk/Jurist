doctype
html(lang="ru")

    include ./templates/_head

    body(id="error_page")
        header.header
            .row.align-middle
                .columns.small-12.medium-6.large-4
                    .logo.logo-white.error_page_logo
                        a(href="/")
                            img(src="./templates/_ares/img/logo/logo.svg", alt="")
                .columns.small-12.medium-6.large-4.large-offset-4.flex
                    a.error_page_phone(href="tel:+375 (152) 967-004") +375 (152) 967-004
        main
            .row.align-middle
                .columns.small-12.medium-12.large-6
                    .title.title_size-extraLarge.title_main Страница не найдена
                    hr.hr.hr-gold.hr-large.hr-left(noshade)
                    p Возможно, страница была перемещена или удалена.
                    a.btn.btn_border.btn_color-yellow.btn_size-medium
                        span вернуться на главную
                .columns.hidden-small.hidden-medium.large-6
                    img(src="./templates/_ares/img/png/scales.png", alt="scales")
            .row.mt-5
                mixin box(img,title,text)
                    .columns.small-12.medium-6.large-4
                        a(href='#').box.flex.box-small.align-middle.text-center.shadow-light
                            .box_img
                                img(src=img, alt=title)
                            div.box_section
                                .title.title_size-medium.title_color-dark=title
                +box('./templates/_ares/img/svg/recovery.svg','Экономические споры')
                +box('./templates/_ares/img/svg/arbitration.svg','Третейский суд')
                +box('./templates/_ares/img/svg/mediation.svg','Медиация')
        include ./templates/_footer